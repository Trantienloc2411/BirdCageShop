<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <title>EShopper - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" />

    <style>
        .custom-input {
            background-color: #f2f2f2;
            border-radius: 10px;
        }

        .equal-height-cols {
            display: flex;
        }

            /* Đảm bảo các cột trong hàng có cùng chiều cao */
            .equal-height-cols [class^="col-"] {
                display: flex;
                flex-direction: column;
            }

                /* Hiển thị nội dung bên trong cột */
                .equal-height-cols [class^="col-"] > * {
                    flex: 1;
                }

        .bo-1 {
            border-radius: 30px;
        }

        .bo-2 {
            border-radius: 30px;
        }

        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333333;
        }

        table {
            width: 70%;
            color: black;
            border-collapse: collapse;
            border: 2px solid #dddddd; /* Thêm đường kẻ bảng */
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            text-align: center;
        }

        td {
            text-align: center;
        }

            /* Độ rộng của cột */
            th:first-child,
            td:first-child {
                width: 80%;
            }

            th:nth-child(2),
            td:nth-child(2) {
                width: 40%;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-xl-5">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark" href="">FAQs</a>
                    <span class="text-muted px-2">|</span>
                    <a class="text-dark" href="">Help</a>
                    <span class="text-muted px-2">|</span>
                    <a class="text-dark" href="">Support</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-dark pl-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a asp-page="/Index" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-3 mr-1">W</span>ingCageShopper
                    </h1>
                </a>
            </div>

            <div class="col-lg-6 col-6 text-left">
            </div>


            @{
                var x = Context.Session.GetString("userName");
                var e = Context.Session.GetString("userEmail");
            }
            @if (x != null)
            {
                <div class="col-lg-3 col-6 text-right">
                    <a asp-page="/Users/Profile" class="btn border">
                        <i class="fas fa-user text-primary"></i>
                    </a>
                    <a asp-page="/Users/UCart/Index" class="btn border">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge">0</span>
                    </a>

                </div>
            }
            else
            {
                <div class="col-lg-3 col-6 text-right">
                    <a asp-page="/Login/Index" class="btn border">
                        <i class="fas fa-user text-primary"></i>
                    </a>
                    <a asp-page="/Login/Index" class="btn border">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge">0</span>
                    </a>
                </div>
            }

        </div>
    </div>
        @RenderBody()

</body>
</html>
