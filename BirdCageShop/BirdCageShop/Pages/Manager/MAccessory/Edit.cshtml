@page
@model BirdCageShop.Pages.Manager.MAccessory.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_ManagerLayout";
}

<h1>Edit</h1>

<h4>Accessory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Accessory.AccessoryId" />
            <div class="form-group">
                <label asp-for="Accessory.AccessoryName" class="control-label"></label>
                <input asp-for="Accessory.AccessoryName" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.AccessoryPrice" class="control-label"></label>
                <input asp-for="Accessory.AccessoryPrice" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.AccessoryDescription" class="control-label"></label>
                <input asp-for="Accessory.AccessoryDescription" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.AccessoryQuantity" class="control-label"></label>
                <input asp-for="Accessory.AccessoryQuantity" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.AccessoryStatus" class="control-label"></label>
                <input asp-for="Accessory.AccessoryStatus" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.CategoryId" class="control-label"></label>
                <select asp-for="Accessory.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Accessory.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.DiscountId" class="control-label"></label>
                <select asp-for="Accessory.DiscountId" class="form-control" asp-items="ViewBag.DiscountId"></select>
                <span asp-validation-for="Accessory.DiscountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.AccessoryImg"></label>
                <input name="AccessoryImg" type="file" class="form-control" />
                <span asp-validation-for="Accessory.AccessoryImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
