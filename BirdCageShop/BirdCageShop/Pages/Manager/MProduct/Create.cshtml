@page
@model BirdCageShop.Pages.Manager.MProduct.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}
<!-- Add this to your head section -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyFhBDGh6fF6yoG400DbPZZH8+78VIaa"
      crossorigin="anonymous">


<div class="col-sm-12 col-md-8 mx-auto">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Create a Product</h6>
        <form method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Product.CageName" class="form-label">Cage Name</label>
                    <input asp-for="Product.CageName" class="form-control" required />
                    <span asp-validation-for="Product.CageName" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Product.Category" class="form-label"></label>
                    <select asp-for="Product.CategoryId" class="form-control" required asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Product.Discount" class="form-label"></label>
                    <select asp-for="Product.DiscountId" class="form-control" required asp-items="ViewBag.DiscountId"></select>
                    <span asp-validation-for="Product.DiscountId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.Material" class="form-label">Material</label>
                    <select asp-for="Product.Material" class="form-select form-select-lg" required>
                        <option value="" selected disabled></option>
                        <option value="1">Gỗ</option>
                        <option value="2">Thép</option>
                        <option value="3">Nan Tre</option>
                        <option value="4">Kim Loại</option>
                        <!--Add more-->
                    </select>
                    <span asp-validation-for="Product.Material" class="text-danger"></span>
                </div>
                <!-- Size -->
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.Size" class="form-label">Size</label>
                    <select asp-for="Product.Size" class="form-select form-select-lg" required>
                        <option value="" selected disabled></option>
                        <option value="1">S</option>
                        <option value="2">M</option>
                        <option value="3">L</option>
                        <option value="4">XL</option>
                        <!--Add more-->
                    </select>
                    <span asp-validation-for="Product.Size" class="text-danger"></span>
                </div>
                <!-- Bar -->
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.Bar" class="form-label">Bar</label>
                    <input asp-for="Product.Bar" type="text" class="form-control form-control-lg" required>
                    <span asp-validation-for="Product.Bar" class="text-danger"></span>
                </div>
                <!--Price-->
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.Price" class="form-label">Price</label>
                    <input asp-for="Product.Price" type="text" class="form-control form-control-lg" required>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <!-- Quantity -->
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.Quantity" class="form-label">Quantity</label>
                    <input asp-for="Product.Quantity" type="text" class="form-control form-control-lg" required>
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <!-- Cage Status -->
                <div class="col-md-2 mb-3">
                    <label asp-for="Product.CageStatus" class="form-label">Status</label>
                    <select asp-for="Product.CageStatus" class="form-select form-select-lg">
                        <option value="0">Hidden</option>
                        <option value="1">Show</option>
                        <option value="2">Customized</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Product.CageImg">Cage Image</label>
                    <input name="CageImg" type="file" class="form-control" />
                    <span asp-validation-for="Product.CageImg" class="text-danger"></span>

                    <br> </br>

                    <label asp-for="Product.Description" class="form-label">Description</label>
                    <textarea asp-for="Product.Description" class="form-control form-control-lg" required rows="4"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />

            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
