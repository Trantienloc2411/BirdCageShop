<body>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: pink; text-align: center; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 20px;">Accessory List</h1>
        </div>
    </div>
    <style>
        .search-container {
            display: flex;
            align-items: center;
        }

        .search-input {
            width: 500px; /* Set the desired width */
            padding: 8px;
            border: 2px solid #ccc;
            border-radius: 4px;
            margin-right: 8px;
        }

        .search-button {
            padding: 8px 12px;
            background-color: pink;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .search-button:hover {
                background-color: #45a049;
            }
    </style>

    <div class="ml-auto search-container">
        <form method="post">
            <input class="search-input" name="SearchString" placeholder="Search ..." />
            <button asp-page-handler="search" type="submit" class="search-button">Search</button>
        </form>
    </div>

    <div id="showedCage" class="container-fluid pt-4 px-4">
        <div class="row g-4">
            @foreach (var item in Model.Accessory)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="bg-light rounded h-100 p-4 card">
                        <img src="~/@item.AccessoryImg" alt="Product Image" class="img-fluid mb-4" />
                        @* <img src="data:image/png;base64,@item.CageImg" alt="Cage Image" class="img-fluid mb-4" /> *@

                        <!-- Cage Name -->
                        <div class="mb-3">
                            <label for="inputAccessoryName" class="form-label">Cage Name:</label>
                            <span id="inputCainputAccessoryNamegeName">@Html.DisplayFor(modelItem => item.AccessoryName)</span>
                        </div>

                        <!-- Quantity and Price -->
                        <div class="mb-3">
                            <label for="inputAccessoryQuantity" class="form-label">Quantity:</label>
                            <span id="inputAccessoryQuantity">@Html.DisplayFor(modelItem => item.AccessoryQuantity)</span>

                            <label for="inputAccessoryPrice" class="form-label ms-3">Price:</label>
                            <span id="inputAccessoryPrice">@Html.Raw(item.AccessoryPrice.Value.ToString("N0"))đ</span>
                        </div>

                        <!-- Discount -->
                        <div class="mb-3">
                            <label for="inputAccessoryDiscount" class="form-label">Discount:</label>
                            <span id="inputAccessoryDiscount">@Html.DisplayFor(modelItem => item.Discount.DiscountName)</span>
                        </div>
                        <!-- Edit and view Detail Button -->
                        <div class="mb-12 row">
                            <div class="col-sm-6">
                                <a asp-page="./Edit" asp-route-id="@item.AccessoryId" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                            <div class="col-6" style="text-align: right;">
                                <a asp-page="./Details" asp-route-id="@item.AccessoryId" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> View detail
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <paging class="pagination"
                    total-records="@Model.totalAccessory"
                    show-total-pages="false"
                    show-total-records="false"
                    page-size="@Model.pageSize"
                    page-no="@Model.pageNo">
            </paging>
        </div>
        </div>







