                            <th style="color: pink; border: solid gainsboro">
                                @Html.DisplayNameFor(model => model.OrderDetail[0].DetailQuantity)
                            </th>
                            <th style="color: pink; border: solid gainsboro">
                                @Html.DisplayNameFor(model => model.OrderDetail[0].Accessory)
                            </th>
                            <th style="color: pink; border: solid gainsboro">
