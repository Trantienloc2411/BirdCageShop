    <script>
    function isValidEmail(email) {
        return /^@@[^\s@@]+@@[^\s@@]+@@[^\s@@]+@@$/.test(email);
    }

    function isStrongPassword(password) {
        return /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/.test(password);
    }

    document.getElementById("registrationForm").addEventListener("submit", function(event) {
        const email = document.querySelector('input[asp-for="@Model.Email"]').value;
        const password = document.querySelector('input[asp-for="@Model.Password"]').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (!isValidEmail(email)) {
            alert("Địa chỉ email không hợp lệ");
            event.preventDefault();
            return false;
        }

        if (!isStrongPassword(password)) {
            alert("Mật khẩu phải chứa ít nhất 8 ký tự, gồm chữ thường, chữ hoa và số");
            event.preventDefault();
            return false;
        }

        if (confirmPassword !== password) {
            alert("Mật khẩu xác nhận không khớp");
            event.preventDefault();
            return false;
        }

        return true;
    });
    </script>


