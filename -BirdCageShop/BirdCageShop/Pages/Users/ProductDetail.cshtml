                        <div class="carousel-item">
                            <img class="w-100 h-100"
                                 src="/img/product-4.jpg"
                                 alt="Hình ảnh" />
                        </div>
                    </div>
                    <a class="carousel-control-prev"
                       href="#product-carousel"
                       data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next"
                       href="#product-carousel"
                       data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-7 pb-5">
                <h3 class="font-weight-semi-bold">@Model.product.CageName</h3>
                <div class="d-flex mb-3">
                    @{
                        var getFeebackStatic = Model.getFeedbackStatic;

                    }
                    <div class="text-primary mr-2">
                        @for (int i = 1; i <= getFeebackStatic.Item1; i++)
                        {
                            <small class="fas fa-star"></small>
                        }
                        @for (int i = 1; i <= (5 - getFeebackStatic.Item1); i++)
                        {
                            <small class="far fa-star"></small>
                        }
                    </div>
                    <small class="pt-1">(@getFeebackStatic.Item2   Nhận xét)</small>
                </div>
                @if (Model.product.Discount != null)
                {
                    var discountedPrice = Math.Round((double)(Model.product.Price - (Model.product.Price * Model.product.Discount.Discount1 / 100)), 2);
                    <h3 class="font-weight-semi-bold mb-4">@discountedPrice</h3> <!-- Giá bán -->
                    <h3 class="font-weight-semi-bold mb-4" style="color: #6c757d; text-decoration: line-through">@Model.product.Price</h3>
                }
                else
                {
                    <h3 class="font-weight-semi-bold mb-4">@Model.product.Price $</h3>
                }

                <h4>Số lượng : @Model.product.Quantity</h4>
                <p class="mb-4">
                    @Model.product.Description
                </p>
                <div class="d-flex mb-3">
                    <p class="text-dark font-weight-medium mb-0 mr-3">Kích cỡ: @Model.product.Size</p>
                </div>
                <div class="d-flex mb-3">
                    <p class="text-dark font-weight-medium mb-0 mr-3">Chất liệu: @Model.product.Material</p>
                </div>
                <div class="d-flex mb-3">
                    <p class="text-dark font-weight-medium mb-0 mr-3">Số thanh: @Model.product.Bar </p>
                </div>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <div class="input-group quantity mr-3" style="width: 130px;">
                        <div class="input-group-btn">
                            <button class="btn btn-primary btn-minus">
